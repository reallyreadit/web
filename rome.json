{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"formatter": {
		"ignore": [
			"node_modules",
			"bin",
			"pkg"
		],
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"trailingComma": "es5",
			"quoteStyle": "single"
		}
	}
}