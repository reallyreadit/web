{
  "manifest_version": 2,

  "name": "reallyread.it",
  "description": "A community of readers",
  "version": "0.43",
	
  "icons": {
    "16": "./icons/icon-16.png",
    "32": "./icons/icon-32.png",
    "48": "./icons/icon-48.png",
    "64": "./icons/icon-64.png",
    "72": "./icons/icon-72.png",
    "96": "./icons/icon-96.png",
    "128": "./icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": "./icons/default-browser-action-icon.png",
    "default_title": "reallyread.it",
    "default_popup": "./browser-action/index.html"
  },
  "background": {
    "page": "./event-page/index.html",
  	"persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.reallyread.it/*"
    ]
  },
  "content_scripts": [ 
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "./content-script/bundle.js"
      ]
    }
  ],
  "permissions": [
    "*://*.reallyread.it/*",
    "cookies",
    "webNavigation",
    "alarms",
    "notifications"
  ]
}
