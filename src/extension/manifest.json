{
  "manifest_version": 2,

  "name": "Readup",
  "description": "Read more. Read better.",
	
  "icons": {
    "16": "./icons/icon-16.png",
    "32": "./icons/icon-32.png",
    "48": "./icons/icon-48.png",
    "64": "./icons/icon-64.png",
    "72": "./icons/icon-72.png",
    "96": "./icons/icon-96.png",
    "128": "./icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": "./icons/default-browser-action-icon.png",
    "default_title": "Readup",
    "default_popup": "./browser-action/index.html"
  },
  "background": {
    "page": "./event-page/index.html",
  	"persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.readup.com/*"
    ]
  },
  "content_scripts": [ 
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "./content-script/bundle.js"
      ]
    }
  ],
  "permissions": [
    "*://*/*",
    "cookies",
    "webNavigation",
    "alarms",
    "notifications"
  ],
  "web_accessible_resources": [
    "content-script/user-interface/bundle.css",
    "content-script/user-interface/bundle.js",
    "content-script/user-interface/fonts/cambria-bold.ttf",
    "content-script/user-interface/fonts/cambria-regular.ttf",
    "content-script/user-interface/fonts/museo-sans-100.ttf",
    "content-script/user-interface/fonts/museo-sans-300.ttf",
    "content-script/user-interface/fonts/museo-sans-500.ttf",
    "content-script/user-interface/fonts/museo-sans-700.ttf",
    "content-script/user-interface/fonts/museo-sans-900.ttf"
  ]
}
