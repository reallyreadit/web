{
  "manifest_version": 2,

  "name": "Readup",
  "description": "Find, read and share articles.",
	
  "icons": {
    "16": "./icons/icon-16.png",
    "32": "./icons/icon-32.png",
    "48": "./icons/icon-48.png",
    "64": "./icons/icon-64.png",
    "72": "./icons/icon-72.png",
    "96": "./icons/icon-96.png",
    "128": "./icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": "./icons/default-browser-action-icon.png",
    "default_title": "Readup"
  },
  "background": {
    "page": "./event-page/index.html",
  	"persistent": false
  },
  "content_scripts": [
    {
      "matches": [],
      "js": [
        "./content-scripts/web-app/bundle.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "cookies",
    "alarms",
    "notifications"
  ],
  "web_accessible_resources": [
    "content-script/embed/bundle.css",
    "content-script/embed/bundle.js",
    "content-script/embed/fonts/cambria-bold.ttf",
    "content-script/embed/fonts/cambria-regular.ttf",
    "content-script/embed/fonts/museo-sans-100.ttf",
    "content-script/embed/fonts/museo-sans-300.ttf",
    "content-script/embed/fonts/museo-sans-500.ttf",
    "content-script/embed/fonts/museo-sans-700.ttf",
    "content-script/embed/fonts/museo-sans-900.ttf",
    "content-script/embed/images/logo.svg",
    "content-script/embed/index.html",
    "content-scripts/alert/bundle.css",
    "content-scripts/ui/fonts/cambria-bold.ttf",
    "content-scripts/ui/fonts/cambria-regular.ttf",
    "content-scripts/ui/fonts/museo-sans-100.ttf",
    "content-scripts/ui/fonts/museo-sans-300.ttf",
    "content-scripts/ui/fonts/museo-sans-500.ttf",
    "content-scripts/ui/fonts/museo-sans-700.ttf",
    "content-scripts/ui/fonts/museo-sans-900.ttf",
    "content-scripts/ui/images/logo.svg"
  ]
}
